    </style>

    <style name="ToggleCountry.European">
        <item name="android:drawableTop">@drawable/selector_eu</item>
    </style>

    <style name="ToggleCountry.Indian">
        <item name="android:drawableTop">@drawable/selector_indian</item>
    </style>

    <style name="ToggleCountry.Italian">
        <item name="android:drawableTop">@drawable/selector_italian</item>
    </style>

    <style name="ToggleCountry.Mayan">
        <item name="android:drawableTop">@drawable/selector_mayan</item>
    </style>

    <style name="ToggleCountry.MiddleEastern">
        <item name="android:drawableTop">@drawable/selector_middle_eastern</item>
    </style>

    <style name="ToggleCountry.NorthAmerica">
        <item name="android:drawableTop">@drawable/selector_north_america</item>
    </style>

    <style name="ToggleCountry.Pacifica">
        <item name="android:drawableTop">@drawable/selector_pacifica</item>
