    <style name="ToggleCountry.NeighborhoodChelsea">
        <item name="android:drawableTop">@drawable/selector_n_chelsea</item>
    </style>

    <style name="ToggleCountry.NeighborhoodEastHarlem">
        <item name="android:drawableTop">@drawable/selector_n_east_harlem</item>
